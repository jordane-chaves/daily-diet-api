    "fastify": "4.15.0",
    "knex": "2.4.2",
    "pg": "8.10.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "1.2.0",
    "@types/bcryptjs": "2.4.2",
    "@types/node": "18.15.11",
    "@types/supertest": "2.0.12",
    "@vitest/coverage-c8": "0.29.8",
    "eslint": "8.37.0",
    "npm-run-all": "4.1.5",
    "sqlite3": "5.1.6",
